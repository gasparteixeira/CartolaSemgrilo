<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context="edm.senacrs.com.br.cartolasemgrilo.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/titulo"
        android:text="NOVA ESCALAÇÃO"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:textSize="24sp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="230dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:background="#50000000"
        android:entries="@array/android_dropdown_arrays"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/titulo"
        android:padding="10dp" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup"
        android:background="#50000000"
        android:layout_below="@+id/spinner"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_centerHorizontal="true">

        <RadioButton
            android:id="@+id/radioButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="PONTUÇÃO " />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="CARTOLETAS" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="TANTO FAZ" />

    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar"
        android:onClick="onBuscarAtletas"
        android:layout_marginTop="10dp"
        android:id="@+id/button"
        android:layout_below="@+id/radioGroup"
        android:layout_centerHorizontal="true" />




</RelativeLayout>
