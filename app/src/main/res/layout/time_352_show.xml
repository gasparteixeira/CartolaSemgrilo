                android:layout_below="@+id/m352_3"
                android:layout_marginRight="10dp"
                android:singleLine="true"
                android:text="Marquinhos Gabriel"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/m352_4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                android:layout_below="@+id/m352_3_nome" />

            <TextView
                android:id="@+id/m352_4_nome"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/m352_4"
                android:singleLine="true"
                android:text="Marquinhos Gabriel"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp" />


            <ImageView
                android:id="@+id/m352_5"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/m352_1_nome"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/m352_5_nome"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/m352_5"
                android:layout_marginLeft="30dp"
                android:singleLine="true"
                android:text="Marquinhos Gabriel"
                android:textAlignment="center"
                android:textColor="@color/white" />


            <!-- laterais -->

            <!-- zagueiros -->


            <ImageView
                android:id="@+id/z352_1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_below="@+id/m352_5_nome"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/z352_1_nome"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/z352_1"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:text="Marquinhos Gabriel"
                android:textAlignment="center"
                android:textColor="@color/white" />


            <ImageView
                android:id="@+id/z352_2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:layout_below="@+id/m352_5_nome" />

            <TextView
                android:id="@+id/z352_2_nome"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/z352_2"
                android:singleLine="true"
                android:text="Marquinhos Gabriel"
                android:textAlignment="center"
                android:textColor="@color/white" />


            <ImageView
                android:id="@+id/z352_3"
