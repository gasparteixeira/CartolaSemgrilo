                android:singleLine="true"
                android:text="Marquinhos Gabriel"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <!-- tecnico -->

            <ImageView
                android:id="@+id/t352_1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentBottom="false"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@+id/g352_1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp" />

            <TextView
                android:id="@+id/t352_1_nome"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/t352_1"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="0dp"
                android:singleLine="true"
                android:text="Marquinhos Gabriel"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/t352_1_nome"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/valor352"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"
                    android:layout_marginLeft="10dp"
                    android:text="VALOR"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/B352"
                    android:layout_width="wrap_content"
                    android:text="Listar"
                    android:onClick="onListTime"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right" />

            </LinearLayout>

        </RelativeLayout>

</android.support.v7.widget.CardView>